rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Chats collection - users can only read/write their own chats
    match /chats/{chatId} {
      // Allow get (single document read) if the chat belongs to the authenticated user
      allow get: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Allow list (query) for authenticated users - the query must filter by userId
      // The client code already filters by userId, so this is safe
      allow list: if request.auth != null;
      
      // Allow create if the userId matches the authenticated user
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // Allow update/delete if the chat belongs to the authenticated user
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Documents collection - users can only read/write their own documents
    match /documents/{documentId} {
      // Allow get if the document belongs to the authenticated user
      allow get: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Allow list for authenticated users - queries must filter by userId
      allow list: if request.auth != null;
      
      // Allow write if the userId matches the authenticated user
      allow write: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
  }
}

